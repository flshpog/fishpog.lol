# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Server Configuration
PORT=3000

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Session Secret (for OAuth flow)
SESSION_SECRET=your-session-secret-change-this

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://fishpog.lol

# Database path (for Render.com with persistent disk)
DATABASE_PATH=/var/data/wright.db

# Google OAuth (optional - get from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://your-backend.onrender.com/api/auth/google/callback

# GitHub OAuth (optional - get from GitHub Developer Settings)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=https://your-backend.onrender.com/api/auth/github/callback
